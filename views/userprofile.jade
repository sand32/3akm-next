extends layout.jade

block content
	h1 User Profile
	hr
	form#profile-form(role = "form")
		.row
			.form-group.col-xs-6
				label Email
				input.form-control(type = "text", name = "email", value = user.email, autofocus)
		.row
			.form-group.col-xs-4
				label First Name
				input.form-control(type = "text", name = "firstName", value = user.firstName)
			.form-group.col-xs-4
				label Last Name
				input.form-control(type = "text", name = "lastName", value = user.lastName)
		.row
			.form-group.col-xs-6
				label Handles
				input.form-control(type = "text", name = "primaryHandle", placeholder = "Primary Handle", value = user.primaryHandle)
		.row
			.form-group.col-xs-6
				each handle in user.tertiaryHandles
					div.input-group(style = "margin-top:.5em;")
						input.form-control(type = "text", name = "tertiaryHandles", value = handle)
						span.input-group-btn
							a.removeHandle(class = "btn btn-default glyphicon glyphicon-minus", style = "margin-top:-2px;", data-toggle = "tooltip", data-placement = "right", title = "Remove this handle")
				a.addHandle(class = "btn btn-default glyphicon glyphicon-plus", data-toggle = "tooltip", data-placement = "right", title = "Add another handle")
		if user.hasRole("admin")
			hr
			h3 Admin-Only
			.row
				.form-group.col-xs-6
					label Roles (comma-delimited)
					input.form-control(type = "text", name = "roles", value = user.roles)
		hr
		a.submitButton(class = "btn btn-default", onclick = "updateUser();") Update
		a(class = "btn btn-link", onclick = "showChangePasswordModal();") Change Password
	.modal.fade#changePasswordModal
		.modal-dialog
			.modal-content
				form#change-password-form(role = "form")
					.modal-header
						button.close(type = "button", data-dismiss = "modal")
							span.sr-only(aria-hidden = "true") &times;
							span.sr-only Close
						h4.modal-title Change Password
					.modal-body
						.row
							.form-group.col-xs-6
								label New Password
								input.form-control(type = "password", name = "newPassword")
						.row
							.form-group.col-xs-6
								label Confirm Password
								input.form-control(type = "password", name = "confirmPassword")
					.modal-footer
						a(class = "btn btn-link", data-dismiss = "modal") Cancel
						a.submitButton(class = "btn btn-default", data-dismiss = "modal", onclick = "changePassword();", disabled = "disabled") Save

