extends layout.jade

block content
	h1 Game Editor
	hr
	form#game-editor-form(role = "form")
		if !game
			.row
				.form-group.col-xs-6
					label Name
					input.form-control(type = "text", name = "name", autofocus)
				.form-group.col-xs-6
					label Version
					input.form-control(type = "text", name = "version")
			.row
				fieldset.col-xs-12
					legend Games Page Description
					.row
						.form-group.col-xs-6
							label Description Header Image URL
							input.form-control(type = "text", name = "descriptionHeaderImage")
						.form-group.col-xs-6
							label Description Header Image (Inactive) URL
							input.form-control(type = "text", name = "descriptionHeaderInactiveImage")
					.row
						.form-group.col-xs-12
							label Description Content
							textarea.form-control(type = "text", name = "description")
			.row
				fieldset.col-xs-10
					legend Supplemental Files
					.row.supplementalFiles
						.form-group.col-xs-5
							label Name
							input.form-control(type = "text", name = "fileName")
						.form-group.col-xs-6
							label URL
							input.form-control(type = "text", name = "fileUrl")
					a.addItem(class = "btn btn-default glyphicon glyphicon-plus", data-toggle = "tooltip", data-placement = "right", data-insertion = "<div class='row supplementalFiles' style='margin-top:.5em;'><div class='col-xs-5'><input type='text' name='fileName' class='form-control'></div><div class='col-xs-6'><input type='text' name='fileUrl' class='form-control'></div><a data-toggle='tooltip' data-placement='right' title='Remove this file' class='removeItem col-xs-1 btn btn-default glyphicon glyphicon-minus' style='margin-top:-2px;' /></div>", title = "Add another file")
			hr
			a.submitButton(class = "btn btn-default", onclick = "addGame();", disabled = "disabled") Submit
			a(class = "btn btn-link" href = "/admin/game") Cancel
		else
