extends layout.jade

block content
	if !editUser
		if user && user.hasRole("admin")
			h1 Add User
		else
			h1 Registration Form
		hr
		form#user-editor-form(role = "form")
			.row
				.form-group.col-xs-6
					label Email 
						span.text-danger (Required)
					input.form-control(type = "text", name = "email", autofocus)
			.row
				.form-group.col-xs-6
					label Password 
						span.text-danger (Required)
					input.form-control(type = "password", name = "password")
			.row
				.form-group.col-xs-6
					label Confirm Password
					input.form-control(type = "password", name = "confirmPassword")
			hr
			.row
				.form-group.col-xs-4
					label First Name
					input.form-control(type = "text", name = "firstName")
				.form-group.col-xs-4
					label Last Name
					input.form-control(type = "text", name = "lastName")
			.row
				.form-group.col-xs-6
					label Handles
					input.form-control(type = "text", name = "primaryHandle", placeholder = "Primary Handle")
			.row
				.form-group.col-xs-6
					a.addHandle(class = "btn btn-default glyphicon glyphicon-plus", data-toggle = "tooltip", data-placement = "right", title = "Add another handle")
			if user && user.hasRole("admin")
				hr
				.row
					.form-group.col-xs-6
						label Roles
						input.form-control(type = "text", name = "roles")
				hr
				a.submitButton(class = "btn btn-default", onclick = "addUser();", disabled = "disabled") Submit
			else
				hr
				a.submitButton(class = "btn btn-default", onclick = "register();", disabled = "disabled") Register
	else
		if user.hasRole("admin")
			h1 Edit User
		else
			h1 My Profile
		hr
		form#user-editor-form(role = "form")
			.row
				.col-xs-9
					.row
						.form-group.col-xs-6
							label Email
							input.form-control(type = "text", name = "email", value = editUser.email, autofocus)
						if !editUser.verified
							.field-align.col-xs-6
								span.text-danger.form-control-static.col-xs-6 Email not verified!
								if user.hasRole("admin")
									a.col-xs-6(class = "btn btn-danger" onclick = "resendVerificationEmail('" + editUser._id + "');") Resend Verification
								else
									a.col-xs-6(class = "btn btn-danger" onclick = "resendVerificationEmail('session');") Resend Verification
					.row
						.form-group.col-xs-5
							label First Name
							input.form-control(type = "text", name = "firstName", value = editUser.firstName)
						.form-group.col-xs-5
							label Last Name
							input.form-control(type = "text", name = "lastName", value = editUser.lastName)
					.row
						.form-group.col-xs-6
							label Handles
							input.form-control(type = "text", name = "primaryHandle", placeholder = "Primary Handle", value = editUser.primaryHandle)
					.row
						.form-group.col-xs-6
							each handle in editUser.tertiaryHandles
								div.input-group(style = "margin-top:.5em;")
									input.form-control(type = "text", name = "tertiaryHandles", value = handle)
									span.input-group-btn
										a.removeHandle(class = "btn btn-default glyphicon glyphicon-minus", style = "margin-top:-2px;", data-toggle = "tooltip", data-placement = "right", title = "Remove this handle")
							a.addHandle(class = "btn btn-default glyphicon glyphicon-plus", data-toggle = "tooltip", data-placement = "right", title = "Add another handle")
				.col-xs-3
					if user.hasRole("admin")
						.well
							.row
								.form-group
									label Registered:
									p= getFormattedTime(editUser.created)
							.row
								.form-group
									label Modified:
									p= getFormattedTime(editUser.modified)
							.row
								.form-group
									label Last Online:
									p= getFormattedTime(editUser.accessed)
			if user.hasRole("admin")
				hr
				.row
					.form-group.col-xs-6
						label Roles
						input.form-control(type = "text", name = "roles", value = editUser.roles)
				hr
				.btn-group
					a.submitButton(class = "btn btn-default", onclick = "updateUser('" + editUser._id + "'); location.replace('/admin/user')") Save
					a.submitButton(class = "btn btn-default", onclick = "updateUser('" + editUser._id + "');") Apply
			else
				hr
				a.submitButton(class = "btn btn-default", onclick = "updateUser('session');") Update
			a(class = "btn btn-link", onclick = "showChangePasswordModal();") Change Password
		.modal.fade#changePasswordModal
			.modal-dialog
				.modal-content
					form#change-password-form(role = "form")
						.modal-header
							button.close(type = "button", data-dismiss = "modal")
								span.sr-only(aria-hidden = "true") &times;
								span.sr-only Close
							h4.modal-title Change Password
						.modal-body
							.row
								.form-group.col-xs-6
									label New Password
									input.form-control(type = "password", name = "newPassword")
							.row
								.form-group.col-xs-6
									label Confirm Password
									input.form-control(type = "password", name = "confirmPassword")
						.modal-footer
							a(class = "btn btn-link", data-dismiss = "modal") Cancel
							if user.hasRole("admin")
								a.submitButton(class = "btn btn-default", data-dismiss = "modal", onclick = "changePassword('" + editUser._id + "');", disabled = "disabled") Save
							else
								a.submitButton(class = "btn btn-default", data-dismiss = "modal", onclick = "changePassword('session');", disabled = "disabled") Save
