extends layout.jade

block content
	h1 Registration Form
	hr
	form#register-form(role = "form")
		.row
			.form-group.col-xs-6
				label Email 
					span.text-danger (Required)
				input.form-control(type = "email", name = "email")
		.row
			.form-group.col-xs-6
				label Password 
					span.text-danger (Required)
				input.form-control(type = "password", name = "password")
		.row
			.form-group.col-xs-6
				label Confirm Password
				input.form-control(type = "password", name = "confirmPassword")
		hr
		.row
			.form-group.col-xs-4
				label First Name
				input.form-control(type = "text", name = "firstName")
			.form-group.col-xs-4
				label Last Name
				input.form-control(type = "text", name = "lastName")
		.row
			.form-group.col-xs-6
				label Handles
				input.form-control(type = "text", name = "handles", placeholder = "Primary Handle")
		.row
			.form-group.col-xs-6
				a.addHandle(class = "btn btn-default glyphicon glyphicon-plus", data-toggle = "tooltip", data-placement = "right", title = "Add another handle")
		hr
		a.submitButton(class = "btn btn-default", onclick = "register();") Register
