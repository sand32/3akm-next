form(name = "forgotPasswordForm", novalidate, ng-submit = "forgotPass.ok()")
	.modal-header
		h4.modal-title Forgot Password
	.modal-body
		p Please enter the email address of your account. An email will be sent to that address with instructions for resetting your password.
		.row
			.form-group.col-xs-6
				label Email
				input.form-control(type = "email", name = "email", ng-model = "forgotPass.email", required, autofocus)
				.form-feedback.text-danger(ng-messages = "forgotPasswordForm.email.$error", ng-if = "forgotPasswordForm.email.$dirty", role = "alert")
					div(ng-message = "required") You must enter an email
					div(ng-message = "email") Invalid email
	.modal-footer
		a.btn.btn-link(ng-click = "forgotPass.cancel()") Cancel
		input.btn.btn-default(type = "submit", ng-click = "forgotPass.ok()", ng-disabled = "forgotPasswordForm.$invalid", value = "Send")
