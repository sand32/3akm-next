.call-of-duty(ng-controller = "TournamentController as tourney")
	.page-title
		h2 Current Tournament
	.page-content
		.col-lg-6
			.button-row
				.button-row-left.button-row-padded
					a.btn.btn-default
						span.button-icon.glyphicon.glyphicon-plus
						| Add
				.button-row-right.button-row-padded
					a.btn.btn-default(ng-click = "tourney.generateRoster()")
						span.button-icon.glyphicon.glyphicon-filter
						| Generate Roster
			.panel.no-padding
				.panel-content
					.empty-table(ng-if = "tourney.roster.length === 0") No roster defined
					table(ng-if = "tourney.roster.length > 0")
						thead.panel-banner
							tr
								th Name
								th Handle
						tbody
							tr(ng-repeat = "player in tourney.roster")
								td {{player.firstName}} {{player.lastName}}
								td {{player.primaryHandle}}
