.panel(ng-controller = "ClientDbDetailController as cldb")
	.panel-body
		form(name = "cldbForm", novalidate, ng-submit = "cldb.save()")
			.row
				.form-group.col-xs-6
					label Nickname 
						span.text-danger (Required)
					input.form-control(type = "text", name = "nickname", autofocus, ng-model = "cldb.current.client_nickname", required)
				.form-group.col-xs-6
					label Description
					input.form-control(type = "text", name = "nickname", autofocus, ng-model = "cldb.current.client_description")
			.row
				.form-group.col-xs-6
					label Unique Identifier
					p {{cldb.current.client_unique_identifier}}
				.form-group.col-xs-6
					label Created
					p {{cldb.current.client_created | date}}
			.row
				.form-group.col-xs-6
					label Last Connected
					p {{cldb.current.client_lastconnected | date}}
				.form-group.col-xs-6
					label Most Recent IP
					p {{cldb.current.client_lastip}}
			.row
				.form-group.col-xs-4
					label Total Connections
					p {{cldb.current.client_totalconnections}}
				.form-group.col-xs-4
					label Total Uploaded (bytes)
					p {{cldb.current.client_total_bytes_uploaded}}
				.form-group.col-xs-4
					label Total Downloaded (bytes)
					p {{cldb.current.client_total_bytes_downloaded}}
			.row
				.col-xs-6
					.button-row-left
						button.btn.btn-default(type = "submit", ng-disabled = "cldb.$invalid || cldb.busy")
							span.button-icon.glyphicon.glyphicon-save
							| Save
						a.btn.btn-link(ui-sref = "^") Cancel
				.col-xs-6
					.button-row-right
						a.btn.btn-default(ng-if = "cldb.current.client_database_id", ng-click = "cldb.delete()", ng-disabled = "cldb.busy")
							span.button-icon.glyphicon.glyphicon-trash
							| Delete